@model Labb4_MVC.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customers</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    @foreach (var item in Model.Loans)
    {
        <tr>
            <td>
                <h6>Book : @Html.DisplayFor(modelItem => item.Books.Name)</h6>
            </td>
            <td>
                <h6>Description : @Html.DisplayFor(modelItem => item.Books.Description)</h6>
            </td>
            <td>
                <h6>Loan Date : @Html.DisplayFor(modelItem => item.LoanDate)</h6>
            </td>
            <td>
                <h6>Return Date : @Html.DisplayFor(modelItem => item.ReturnDate)</h6><br />
            </td>
        </tr>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>